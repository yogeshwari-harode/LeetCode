class Solution {
    public boolean isPalindrome(int x) {
        
        if(x<0){
            return false;
        }
        else{
            String str=Integer.toString(x);
            int p1=0;
            int p2=str.length()-1;
            while(p1<=p2){
                if(str.charAt(p1) != str.charAt(p2)){
                    return false;
                }
                p1++;
                p2--;
            }
        }
        return true;
    }
}
