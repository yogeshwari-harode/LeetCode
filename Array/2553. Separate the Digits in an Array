import java.util.*;

class Solution {
    public int[] separateDigits(int[] nums) {
        List<Integer> ans = new ArrayList<>();

        for (int num : nums) {
            splitDigit(num, ans);
        }

        int[] result = new int[ans.size()];
        for (int i = 0; i < ans.size(); i++) {
            result[i] = ans.get(i);
        }
        return result;
    }

    public void splitDigit(int num, List<Integer> ans) {
        int temp = num;
        Stack<Integer> stack = new Stack<>();

        while (temp > 0) {
            stack.push(temp % 10);
            temp /= 10;
        }

        while (!stack.isEmpty()) {
            ans.add(stack.pop());
        }
    }
}
